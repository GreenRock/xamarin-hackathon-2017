<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:PokemonDI.Controls;assembly=PokemonDI"
             x:Class="PokemonDI.Views.MapPage"
             Title="{Binding Title}">
    <Grid>
        <controls:CustomMap CustomPins="{Binding Pins, Mode=OneWay}"
                            Center="{Binding Center, Mode=OneWayToSource}"
                            IsShowingUser="True"
                            HasZoomEnabled="True" />
        <Button Text="Search"
                BackgroundColor="Accent"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="EndAndExpand"
                Margin="10"
                WidthRequest="150"
                HeightRequest="36"
                Command="{Binding SearchCommand}"></Button>
    </Grid>
</ContentPage>